<p id="notice"><%= notice %></p>

<h1>Nfc Cards</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Uid</th>
      <th>Password</th>
      <th>Is activated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nfc_cards.each do |nfc_card| %>
      <tr>
        <td><%= nfc_card.user %></td>
        <td><%= nfc_card.name %></td>
        <td><%= nfc_card.uid %></td>
        <td><%= nfc_card.password %></td>
        <td><%= nfc_card.is_activated %></td>
        <td><%= link_to 'Show', nfc_card %></td>
        <td><%= link_to 'Edit', edit_nfc_card_path(nfc_card) %></td>
        <td><%= link_to 'Destroy', nfc_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Nfc Card', new_nfc_card_path %>
