<p id="notice"><%= notice %></p>

<h1>Door Logs</h1>

<table>
  <thead>
    <tr>
      <th>Sesame device</th>
      <th>User</th>
      <th>Before door status</th>
      <th>After door status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @door_logs.each do |door_log| %>
      <tr>
        <td><%= door_log.sesame_device %></td>
        <td><%= door_log.user %></td>
        <td><%= door_log.before_door_status %></td>
        <td><%= door_log.after_door_status %></td>
        <td><%= link_to 'Show', door_log %></td>
        <td><%= link_to 'Edit', edit_door_log_path(door_log) %></td>
        <td><%= link_to 'Destroy', door_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Door Log', new_door_log_path %>
